    <Button
        android:id="@+id/dJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:text="Join"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/viewt"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/textView161"
        android:backgroundTint="@color/dark_background"
        android:textAllCaps="false"
        android:textColor="@color/primary_yellow"/>

    <Button
        android:id="@+id/dExitBefore"
        android:layout_width="121dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:text="Exit before pump"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/dJoin"
        android:backgroundTint="@color/dark_background"
        android:textAllCaps="false"
        android:textColor="@color/primary_yellow"/>

    <Button
        android:id="@+id/dExitAfter"
        android:layout_width="126dp"
        android:layout_height="52dp"
        android:layout_marginEnd="20dp"
        android:text="Exit after pump"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/dJoin"
        tools:ignore="MissingConstraints"
        android:backgroundTint="@color/dark_background"
        android:textAllCaps="false"
        android:textColor="@color/primary_yellow"/>

    <ImageButton
        android:id="@+id/dView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dLength"
        app:layout_constraintTop_toBottomOf="@+id/dAvailable"
        app:srcCompat="@drawable/exinfo" />

    <ImageButton
        android:id="@+id/pViewBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/viewt"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toEndOf="@+id/pLength"
        app:layout_constraintTop_toBottomOf="@+id/pAvailable"
        app:srcCompat="@drawable/exinfo" />

    <Button
        android:id="@+id/refresh"
        android:layout_width="93dp"
        android:layout_height="37dp"
        android:text="Refresh"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/viewt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationName" />

</androidx.constraintlayout.widget.ConstraintLayout>